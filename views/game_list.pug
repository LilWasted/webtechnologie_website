extends layout

block content
  h1.w3-center(style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem;")= title
  input.w3-input.w3-round.w3-border.w3-input-search#search(type="text" placeholder="Search games...")

  if game_list.length
    ul#game-list(style='list-style-type: none; padding: 0; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;')
      each game in game_list
        li.w3-card-4.w3-padding.w3-round-large.game-item(style='border: 1px solid #ddd; list-style: none; transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;')
          h3.w3-text-blue(style='font-size: 1.5rem; font-weight: bold;')
            a(href=game.url) #{game.name}
          p(style='margin: 0; font-size: 1rem;')
            b Open Events:
            span #{game.openEventCount}
  else
    p There are no games.
  style.
    #search, #game-list {
      z-index: 9999; /* Higher than other elements */
      position: relative; /* Ensures it's not covered by other fixed elements */
    }
  script(src="/javascripts/scripts.js")