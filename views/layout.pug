    style.
        body, h1, h2, h3, h4, h5, h6 {
          font-family: "Montserrat", sans-serif
        }

        .w3-input {
          background: #222;
          color: white;
        }

        .w3-input-search {
          width: 100%;
          max-width: 400px;
        }

        .w3-input-form{
          max-height:25px;
          max-width: 200px;
        }

        .form-group{
            margin-top: 10px;
        }

        .w3-bar-block,.no-bullets {
          list-style-type: none; /* Removes the default bullet points */
        }

        .w3-bar {
          display: flex;
          flex-wrap: wrap;
          list-style-type: none; /* Removes the default bullet points */
          background: #222;
          padding: 0;
          margin: 0;
        }

        .w3-row-padding img {
          margin-bottom: 12px
        }

        .w3-sidebar {
          width: 120px;
          background: #222;
        }

        #main {
          margin-left: 120px;
        }

        footer {
          text-align: left; /* Aligns the footer content to the right */
          margin-left: 125px;

        }

        @media only screen and (max-width: 600px) {
          #main {
            margin-left: 0;
          }

          footer {
            text-align: left; /* Aligns the footer content to the right */
            margin-left: 5px;
          }
        }
