    style.
        body, h1, h2, h3, h4, h5, h6 {
          font-family: "Montserrat", sans-serif
        }

        .w3-bar-block {
          list-style-type: none; /* Removes the default bullet points */
        }

        .w3-row-padding img {
          margin-bottom: 12px
        }

        .w3-sidebar {
          width: 120px;
          background: #222;
        }

        #main {
          margin-left: 120px;
        }

        @media only screen and (max-width: 600px) {
          #main {
            margin-top: 60px;
            margin-left: 0;
          }
        }
    //link(rel='stylesheet', href='/stylesheets/style.css')


  body(class='w3-black')
    // Top Navbar for Mobile (Hidden by default)
    nav.w3-top.w3-hide-medium.w3-hide-large.w3-opacity w3-hover-opacity-off
      .w3-bar.w3-black.w3-opacity w3-hover-opacity-off.w3-center.w3-small
        a.w3-bar-item.w3-button(href='/home') Home
        a.w3-bar-item.w3-button(href='/home/events') All events
        a.w3-bar-item.w3-button(href='/home/games') All games
        if user
          hr
          a(href='/home/event/create' class='w3-bar-item w3-button') Create new event
          a(href='/home/games/create' class='w3-bar-item w3-button') Create new game
          hr
          a(href='/user/logout' class='w3-bar-item w3-button') Logout
          a(href='/user/profile' class='w3-bar-item w3-button') Profile
        else
          hr
          a(href='/user/login' class='w3-bar-item w3-button') Login
    // Sidebar
    nav.w3-sidebar.w3-bar-block.w3-small.w3-hide-small.w3-center
      block sidebar
        ul(class='w3-bar-block')
          li
            a(href='/home' class='w3-bar-item w3-button') Home
          li
            a(href='/home/events' class='w3-bar-item w3-button') All events
          li
            a(href='/home/games' class='w3-bar-item w3-button') All games
          if user
            hr
            li
              a(href='/home/event/create' class='w3-bar-item w3-button') Create new event
            li
              a(href='/home/games/create' class='w3-bar-item w3-button') Create new game
            hr
            li
              a(href='/user/logout' class='w3-bar-item w3-button') Logout
            li
              a(href='/user/profile' class='w3-bar-item w3-button') Profile
          else
            hr
            li
              a(href='/user/login' class='w3-bar-item w3-button') Login

    // Main Content
    div#main(class='w3-padding-large')
      block content

