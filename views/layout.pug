    style.
        body, h1, h2, h3, h4, h5, h6 {
          font-family: "Montserrat", sans-serif
        }

        .w3-bar-block {
          list-style-type: none; /* Removes the default bullet points */
        }

        .w3-row-padding img {
          margin-bottom: 12px
        }

        .w3-sidebar {
          width: 120px;
          background: #222;
        }

        #main {
          margin-left: 120px;
        }

        @media only screen and (max-width: 600px) {
          .w3-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1; /* Make sure it's on top of other content */
            padding: 10px 0;
            display: flex;
            justify-content: space-around; /* Distribute the items horizontally */
            flex-direction: row; /* Place items next to each other */
            background: #222; /* Ensure the sidebar has a background */
            width: 100%; /* Sidebar takes full width */
          }

          #main {
            margin-top: 60px;
            margin-left: 0;
          }

          .w3-bar-item {
            padding: 10px 15px;
            font-size: 16px;
          }
        }
