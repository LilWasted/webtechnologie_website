doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel="stylesheet", href="https://www.w3schools.com/w3css/4/w3.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

        style.
            #cookie-consent-popup {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0, 0, 0, 0.4);
            }

            #cookie-consent-popup .w3-modal-content {
                margin: 10% auto;
                border: 1px solid black;
                width: 90%;
                max-width: 500px;
                background-color: gray;
                color: white;
                text-align: center; /* Center all text */

            }

            #cookie-consent-popup .w3-container {
                color: white;
                text-align: center; /* Center all text */

            }


            #cookie-consent-popup header {
                background-color: gray; /* Custom background color */
                padding: 10px;
                text-align: center; /* Center all text */

            }

            #cookie-consent-popup footer {
                background-color: gray; /* Custom background color */
                padding: 10px;
                text-align: center;
                text-align: center; /* Center all text */

            }

            body, h1, h2, h3, h4, h5, h6 {
                font-family: 'Montserrat', sans-serif;
                margin: 0;
                padding: 0;
            }

            .body-container {
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            #main-content {
                margin-top: 6vh; /* Adjust this value based on the header height */
            }

            .footer {
                background: linear-gradient(to right, #4f9afa, #651ae6); /* Gradient background */
                color: white;
                text-align: center;
                padding: 10px 0;
                width: 100%;
                height: 4vh;
                display: flex;
                align-items: center; /* Center items vertically */
                justify-content: center; /* Align items to the right */

            }

            .footer a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
            }

            footer span::before {
                content: "|";
                margin-right: 10px; /* Adjust the space here */
            }


            .footer a:hover {
                text-decoration: underline;
            }

            .w3-bar-block {
                list-style-type: none; /* Removes the default bullet points */
            }


            .w3-row-padding img {
                margin-bottom: 12px
            }

            .w3-sidebar {
                width: 120px;
                background: #222;
            }


            @media only screen and (max-width: 600px) {
                #main {
                    margin-top: 60px;
                    margin-left: 0;
                }
            }

            header.w3-bar {
                position: fixed;
                top: 0;
                width: 100%;
                z-index: 1000; /* Ensure the header is above other content */
                background-color: #151519; /* Change background color to gray */
                border: 2px solid #151519; /* Add a border around the entire header */
                display: flex;
                justify-content: flex-end; /* Align items to the right */
                align-items: center; /* Center items vertically */
                height: 6vh;
            }

            .w3-bar .w3-bar-item {
                margin-left: 10px; /* Add some space between items */
                font-size: 2vh; /* Increase the font size */
            }

            .w3-bar .w3-bar-item:hover {
                background-color: #333 !important;
                color:white !important;
                border-radius: 10px;
            }

            .hero {
                position: relative;
                width: 100%;
                height: calc(100vh - 13vh); /* Full height minus header height */
                background: url("/images/pexels-a-darmel-7862414.jpg") no-repeat center center/cover;
                background-size: cover; /* Ensure the image covers the entire area */
                background-position: center; /* Center the image */
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                text-align: center;
            }

            .hero-text {
                background: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
                padding: 20px;
                border-radius: 10px;
            }
        script(src='/javascripts/scripts.js')
        //link(rel='stylesheet', href='/stylesheets/style.css')




