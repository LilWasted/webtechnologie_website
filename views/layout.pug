    style.
        body, h1, h2, h3, h4, h5, h6 {
          font-family: "Montserrat", sans-serif
        }

        .w3-bar-block {
          list-style-type: none; /* Removes the default bullet points */
        }

        .w3-row-padding img {
          margin-bottom: 12px
        }

        .w3-sidebar {
          width: 120px;
          background: #222;
        }

        #main {
          margin-left: 120px;
        }

        @media only screen and (max-width: 600px) {
          #main {
            margin-top: 60px;
            margin-left: 0;
          }
        }

        .w3-bar {
          display: flex;
          justify-content: flex-end; /* Align items to the right */
        }

        .w3-bar .w3-bar-item {
          margin-left: 10px; /* Add some space between items */
        }
    //link(rel='stylesheet', href='/stylesheets/style.css')


  body(class='w3-black')
    // Top Navbar for Mobile (Hidden by default)
    header.w3-bar.w3-black
      a.w3-bar-item.w3-button(href='/home') Home
      a.w3-bar-item.w3-button(href='/home/events') All events
      a.w3-bar-item.w3-button(href='/home/games') All games
      if user
        a.w3-bar-item.w3-button(href='/home/event/create') Create new event
        a.w3-bar-item.w3-button(href='/home/games/create') Create new game
        a.w3-bar-item.w3-button(href='/user/profile') Profile
        a.w3-bar-item.w3-button(href='/user/logout') Logout
      else
        a.w3-bar-item.w3-button(href='/user/login') Login

    // Main Content

    div#main(class='w3-padding-large')
      block content

